---
import MainLayout from '../layouts/MainLayout.astro';
import { TextInput } from '../components/TextInput';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';

// Mock data - replace with actual data fetching
const categories = [
  { id: 1, name: 'Frontend' },
  { id: 2, name: 'Backend' },
  { id: 3, name: 'DevOps' },
];

const MIN_TEXT_LENGTH = 1000;
const MAX_TEXT_LENGTH = 10000;
---

<MainLayout title="Generuj fiszki">
  <div class="container mx-auto max-w-4xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Generuj fiszki</h1>
      <p class="text-muted-foreground">
        Wprowadź tekst, aby wygenerować fiszki. Tekst powinien mieć od {MIN_TEXT_LENGTH} do {MAX_TEXT_LENGTH} znaków.
      </p>
    </div>

    <div class="grid gap-6">
      <Card>
        <CardHeader>
          <CardTitle>Wprowadź tekst</CardTitle>
        </CardHeader>
        <CardContent>
          <TextInput
            client:load
            value=""
            onChange={(value) => console.log(value)}
            onSubmit={() => console.log('Submit')}
            minLength={MIN_TEXT_LENGTH}
            maxLength={MAX_TEXT_LENGTH}
          />
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Wybierz kategorię</CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid gap-4 md:grid-cols-3">
            {categories.map((category) => (
              <button
                class="p-4 rounded-lg border bg-card text-card-foreground hover:bg-accent"
              >
                {category.name}
              </button>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</MainLayout> 